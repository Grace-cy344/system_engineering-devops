#!/usr/bin/env bash
#
# Loop from 1 to 10 and display special messages for the 4th and 8th iterations

count=1
while [ "$count" -le 10 ]; do
    if [ "$count" -eq 4 ]; then
        printf '%s\n' "bad luck"
    elif [ "$count" -eq 8 ]; then
        printf '%s\n' "good luck"
    else
        printf '%s\n' "Best School"
    fi
    count=$((count + 1))
done
